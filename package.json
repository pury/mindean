{
	"name": "mindean",
	"version": "1.0.1",
	"description": "A lightweight, open-source mind map management platform.",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"author": "Pury",
	"license": "MIT",
	"scripts": {
		"clean": "lerna clean",
		"build": "lerna run build",
		"test": "lerna run test",
		"lint": "lerna run lint",
		"dev": "lerna run dev --parallel",
		"start:app": "yarn workspace mindean-app start",
		"start:io": "yarn workspace mindean-io start",
		"publish": "lerna publish",
		"precommit": "lint-staged"
	},
	"devDependencies": {
		"@babel/core": "^7.23.7",
		"@babel/plugin-transform-class-properties": "^7.23.3",
		"@babel/plugin-transform-object-rest-spread": "^7.23.4",
		"@babel/preset-env": "^7.23.7",
		"@babel/preset-react": "^7.23.3",
		"babel-loader": "^9.1.3",
		"core-js": "^3.35.0",
		"css-loader": "^6.8.1",
		"eslint": "^8.56.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"html-webpack-plugin": "^5.6.0",
		"husky": "^8.0.3",
		"lerna": "^8.0.2",
		"lint-staged": "^15.2.0",
		"mini-css-extract-plugin": "^2.7.6",
		"style-loader": "^3.3.3",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^4.15.1",
		"webpack-merge": "^5.10.0"
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"eslint --fix",
			"git add"
		]
	},
	"engines": {
		"node": ">=16.0.0",
		"yarn": ">=1.22.0"
	},
	"dependencies": {
		"jszip": "^3.10.1"
	}
}
